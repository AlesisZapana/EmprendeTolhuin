{% extends 'base.html.twig' %}

{% block title %}Rubro index{% endblock %}

{% block body %}
    <h1>Rubro index</h1>
    <a href="{{ path('rubro_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rubro in rubros %}
            <tr>
                <td>{{ rubro.id }}</td>
                <td>{{ rubro.tipo }}</td>
                <td>
                    <a href="{{ path('rubro_show', {'id': rubro.id}) }}">show</a>
                    <a href="{{ path('rubro_edit', {'id': rubro.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
