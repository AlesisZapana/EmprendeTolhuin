{% extends 'base.html.twig' %}

{% block title %}Rubro{% endblock %}

{% block body %}
    <h1>Rubro: {{rubro.tipo}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Tipo</th>
                <td>{{ rubro.tipo }}</td>
            </tr>
            <tr>
                <th>Sector Productivo</th>
                <td>{{ rubro.sector }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('rubro_index') }}">Volver a lista</a>

    <a class="btn btn-primary btn-sm" href="{{ path('rubro_edit', {'id': rubro.id}) }}">Editar</a>

    {{ include('rubro/_delete_form.html.twig') }}
{% endblock %}
