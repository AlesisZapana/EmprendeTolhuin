{% extends 'base.html.twig' %}

{% block title %}Usuarios registrados{% endblock %}

{% block body %}
    <a class="btn btn-primary btn-sm" href="{{path('usuario_show_personal')}}">Mi usuario</a>
    <a class="btn btn-primary btn-sm" href="{{path('usuario_edit_personal')}}">Editar Mi usuario</a>
    <a class="btn btn-primary btn-sm" href="{{path('app_register')}}">Registrar nuevo usuario</a>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Roles</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{usuario.username}}</td>
                <td>
                    {% for rol in usuario.roles %}
                        [{{rol}}]
                    {% endfor %}
                </td>
                <td>
                    <a class="badge badge-primary" href="{{ path('usuario_show', {'id': usuario.id}) }}">Ver</a>
                    <a class="badge badge-primary" href="{{ path('usuario_edit', {'id': usuario.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}